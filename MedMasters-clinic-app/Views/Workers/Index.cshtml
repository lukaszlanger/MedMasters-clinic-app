@model IEnumerable<Klinika.Models.Workers>

@{
    ViewData["Title"] = "Pracownicy";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Dodaj nowego pracownika</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Forename)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>Edytuj</th>
            <th>Informacje</th>
            <th>Usuń</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Forename)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role.IdRole)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdWorker">
                    <img src="~/images/edytuj2.png" />
                </a>
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.IdWorker">
                    <img src="~/images/info.png" />
                </a>
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.IdWorker">
                    <img src="~/images/usun.png" />
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
