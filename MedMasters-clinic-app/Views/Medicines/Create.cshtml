@model Klinika.Models.Medicines

@{
    ViewData["Title"] = "Create";
}

<h1>Dodaj</h1>

<h4>Leki</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MedicineName" class="control-label">Nazwa leku</label>
                <input asp-for="MedicineName" class="form-control" />
                <span asp-validation-for="MedicineName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dosage" class="control-label">Dawkowanie</label>
                <input asp-for="Dosage" class="form-control" />
                <span asp-validation-for="Dosage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfIssue" class="control-label">Data wydania</label>
                <input asp-for="DateOfIssue" class="form-control" />
                <span asp-validation-for="DateOfIssue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpirationDay" class="control-label">Data ważności</label>
                <input asp-for="ExpirationDay" class="form-control" />
                <span asp-validation-for="ExpirationDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VisitId" class="control-label">Wizyta</label>
                <select asp-for="VisitId" class ="form-control" asp-items="ViewBag.VisitId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div> 

<div>
    <a asp-action="Index">Powrót do listy</a>
</div>

